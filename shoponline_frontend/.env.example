# Shoponline Frontend Environment Variables Template
# Copy this file to .env and fill in your values

# API Configuration - FIXED: Remove /api/v1 from base URL to prevent duplication
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=10000

# WebSocket Configuration
REACT_APP_WS_BASE_URL=ws://localhost:8000/ws
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_DELAY=3000

# Authentication
REACT_APP_JWT_ACCESS_TOKEN_LIFETIME=900000
REACT_APP_JWT_REFRESH_TOKEN_LIFETIME=604800000
REACT_APP_TOKEN_REFRESH_THRESHOLD=60000

# App Configuration
REACT_APP_APP_NAME=ShopOnline Uganda
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG_MODE=true

# Theme Configuration
REACT_APP_THEME=blue
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_CURRENCY_SYMBOL=UGX
REACT_APP_CURRENCY_CODE=UGX

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
REACT_APP_MAX_IMAGES_PER_PRODUCT=10

# Payment Configuration
REACT_APP_MTN_MOMO_ENABLED=true
REACT_APP_AIRTEL_MONEY_ENABLED=true
REACT_APP_COD_ENABLED=true

# Feature Flags
REACT_APP_FLASH_SALES_ENABLED=true
REACT_APP_WISHLIST_ENABLED=true
REACT_APP_REVIEWS_ENABLED=true
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_PWA_ENABLED=true

# Performance
REACT_APP_PAGINATION_SIZE=12
REACT_APP_SEARCH_DEBOUNCE_DELAY=500
REACT_APP_IMAGE_LAZY_LOADING=true
REACT_APP_CACHE_TIMEOUT=300000

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_FACEBOOK_PIXEL_ID=
REACT_APP_SENTRY_DSN=

# Social Media
REACT_APP_FACEBOOK_URL=
REACT_APP_TWITTER_URL=
REACT_APP_INSTAGRAM_URL=
REACT_APP_WHATSAPP_NUMBER=

# Contact Information
REACT_APP_SUPPORT_EMAIL=support@shoponline.com
REACT_APP_SUPPORT_PHONE=+256700000000
REACT_APP_COMPANY_ADDRESS=Kampala, Uganda

# Admin Configuration
REACT_APP_ADMIN_EMAIL_DOMAIN=@shoponline.com
REACT_APP_CLIENT_EMAIL_DOMAIN=@gmail.com
REACT_APP_ADMIN_SESSION_TIMEOUT=3600000

# Security
REACT_APP_ENABLE_2FA=false
REACT_APP_PASSWORD_MIN_LENGTH=8
REACT_APP_SESSION_STORAGE_KEY=shoponline_session
REACT_APP_LOCAL_STORAGE_KEY=shoponline_data

# Development
REACT_APP_MOCK_API=false
REACT_APP_API_DELAY_SIMULATION=0
REACT_APP_SHOW_DEVTOOLS=true

# Production Configuration (Override in production)
# REACT_APP_API_BASE_URL=https://api.shoponline.ug
# REACT_APP_WS_BASE_URL=wss://api.shoponline.ug/ws
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG_MODE=false
# REACT_APP_SHOW_DEVTOOLS=false